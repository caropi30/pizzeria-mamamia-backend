<h2 class="mx-auto px-5 py-3">Realtime products</h2>

<section id="form" class="mx-auto px-5">
  <form>
    <div class="mb-3">
      <label for="title" class="form-label">Título</label>
      <input type="text" class="form-control" id="title" placeholder="Título" />
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">Descripción</label>
      <input
        type="text"
        class="form-control"
        id="description"
        placeholder="Descripción"
      />
    </div>
    <div class="mb-3">
      <label for="price" class="form-label">Precio</label>
      <input
        type="number"
        class="form-control"
        id="price"
        placeholder="Precio"
      />
    </div>
    <div class="mb-3">
      <label for="thumbnail" class="form-label">Thumbnail</label>
      <input
        type="text"
        class="form-control"
        id="thumbnail"
        placeholder="Thumbnail"
        value="sin imagen"
      />
    </div>
    <div class="mb-3">
      <label for="code" class="form-label">Código</label>
      <input type="text" class="form-control" id="code" placeholder="Código" />
    </div>
    <div class="mb-3">
      <label for="category" class="form-label">Categoría</label>
      <input
        type="text"
        class="form-control"
        id="category"
        placeholder="Categoría"
      />
    </div>
     <div class="mb-3">
      <label for="stock" class="form-label">Stock</label>
      <input
        type="number"
        class="form-control"
        id="stock"
        placeholder="Stock"
      />
    </div>
    <div class="mb-3 form-floating">
      <select id="status" class="form-select" aria-label="status">
         <option selected>Elige un status</option>
        <option value="true">Activo</option>
        <option value="false">Inactivo</option>
      </select>
      <label for="status" class="form-label">Status</label>
    </div>
    <div class="col-auto">
      <button type="button" class="btn btn-primary mb-3" id="btnEnviar">Enviar</button>
    </div>
  </form>
</section>

<h3 class="mx-auto px-5 py-3">Productos actualizados en tiempo real:</h3>
<section id="products" class="mx-auto p-5">
  <div class="row g-3 justify-content-center" id="productsRow">

  </div>
</section>



